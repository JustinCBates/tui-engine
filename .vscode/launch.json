{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug demo main_menu",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/demos/main_menu.py",
            "cwd": "${workspaceFolder}/demos",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PATH": "/home/vpsuser/.local/bin:${env:PATH}"
            }
        },
        {
            "name": "Python: pytest current file",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PATH": "/home/vpsuser/.local/bin:${env:PATH}"
            }
        },
        {
            "name": "Python: pytest all tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "--cov=src",
                "--cov-report=term-missing",
                "--cov-report=html",
                "--cov-report=json",
                "--cov-fail-under=85",
                "--tb=short",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PATH": "/home/vpsuser/.local/bin:${env:PATH}"
            }
        },
        {
            "name": "Python: pytest with coverage",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "--cov=src",
                "--cov-report=html",
                "--cov-report=term-missing",
                "--cov-report=json",
                "--cov-fail-under=85",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PATH": "/home/vpsuser/.local/bin:${env:PATH}"
            }
        }
    ]
}